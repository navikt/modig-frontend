<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>no.nav.modig</groupId>
        <artifactId>modig-frontend</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>modig-frontend-bootstrap</artifactId>

    <profiles>
        <profile>
            <id>bygg-bootstrap</id>
            <build>

                <resources>
                    <resource>
                        <directory>src/main/resources/css</directory>
                        <targetPath>css</targetPath>
                    </resource>
                    <resource>
                        <directory>src/main/resources/js</directory>
                        <targetPath>js</targetPath>
                    </resource>
                    <resource>
                        <directory>src/main/resources/bootstrap/img</directory>
                        <targetPath>gfx</targetPath>
                    </resource>
                </resources>

                <plugins>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2</version>
                        <executions>


                            <!-- CONCAT -->

                            <execution>
                                <id>concat</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/concat.js</argument>
                                        <argument>src/main/resources/bootstrap/js/</argument>
                                        <argument>${project.build.directory}/classes/js/modig.js</argument>
                                    </arguments>
                                </configuration>
                            </execution>


                            <!-- UGLIFY -->

                            <execution>
                                <id>uglify</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/uglify-js/bin/uglifyjs</argument>
                                        <argument>-nc</argument>
                                        <argument>--output</argument>
                                        <argument>${project.build.directory}/classes/js/modig.min.js</argument>
                                        <argument>${project.build.directory}/classes/js/modig.js</argument>
                                    </arguments>
                                </configuration>
                            </execution>


                            <!-- LESS -->

                            <execution>
                                <id>lessc</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/less/bin/lessc</argument>
                                        <argument>src/main/resources/modig.less</argument>
                                        <argument>${project.build.directory}/classes/css/modig.css</argument>
                                        <argument>-x</argument><!-- Pakker hver selektor pÃ¥ en linje og fjerner kommentarer -->
                                        <argument>--yui-compress</argument><!-- Fjerner all whitespace -->
                                    </arguments>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>

