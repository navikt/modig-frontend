<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>no.nav.modig</groupId>
        <artifactId>modig-frontend</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>modig-frontend-bootstrap</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <wicket.version>6.0.0</wicket.version>
        <jetty.version>7.6.3.v20120416</jetty.version>
        <fiftyfive.version>4.0.1</fiftyfive.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>


    <build>

        <resources>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/generated-resources</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                </configuration>
            </plugin>
        </plugins>

    </build>

    <profiles>
        <profile>
            <id>bygg-bootstrap</id>
            <build>

                <plugins>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2</version>
                        <executions>


                            <!-- COPY BOOTSTRAP JAVASCRIPT FILES -->

                            <execution>
                                <id>copy-js</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/copy.js</argument>
                                        <argument>src/main/bootstrap/js/</argument>
                                        <argument>src/main/generated-resources/js/bootstrap/</argument>
                                    </arguments>
                                </configuration>
                            </execution>


                            <!-- COPY BOOTSTRAP IMAGES -->

                            <execution>
                                <id>copy-img</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/copy.js</argument>
                                        <argument>src/main/bootstrap/img/</argument>
                                        <argument>src/main/generated-resources/img/</argument>
                                    </arguments>
                                </configuration>
                            </execution>


                            <!-- CONCAT BOOTSTRAP JAVASCRIPT FILES -->

                            <execution>
                                <id>concat</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/concat.js</argument>
                                        <argument>src/main/bootstrap/js/</argument>
                                        <argument>src/main/generated-resources/js/modig.js</argument>
                                    </arguments>
                                </configuration>
                            </execution>


                            <!-- UGLIFY SINGLE BOOTSTRAP FILES -->

                            <execution>
                                <id>uglify-singles</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/uglify-singles.js</argument>
                                        <argument>src/main/bootstrap/js/</argument>
                                        <argument>src/main/generated-resources/js/bootstrap/</argument>
                                    </arguments>
                                </configuration>
                            </execution>


                            <!-- UGLIFY CONCATINATED BOOTSTRAP JAVASCRIPT -->

                            <execution>
                                <id>uglify</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/uglify-js/bin/uglifyjs</argument>
                                        <argument>-nc</argument>
                                        <argument>--output</argument>
                                        <argument>src/main/generated-resources/js/modig.min.js</argument>
                                        <argument>src/main/generated-resources/js/modig.js</argument>
                                    </arguments>
                                </configuration>
                            </execution>


                            <!-- BUILD CSS FROM LESS WITH COMPRESSION -->

                            <execution>
                                <id>lessc</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <arguments>
                                        <argument>src/main/nodejs/node_modules/less/bin/lessc</argument>
                                        <argument>src/main/modig.less</argument>
                                        <argument>src/main/generated-resources/css/modig.css</argument>
                                        <argument>-x</argument>
                                        <!-- Pakker hver selektor pÃ¥ en linje og fjerner kommentarer -->
                                        <argument>--yui-compress</argument>
                                        <!-- Fjerner all whitespace -->
                                    </arguments>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>

