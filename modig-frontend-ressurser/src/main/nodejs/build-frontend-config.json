{
	"fileStructure": [
		"/",
		"css/", "css/bootstrap/", "css/modig/", "css/enonic/",
		"img/",
		"js/",
		"js/bootstrap/", "js/bootstrap/jquery/",
		"js/modig/", "js/modig/felles/", "js/modig/jquery/",
		"js/enonic/",
		"less/",
		"less/bootstrap/",
		"less/modig/", "less/modig/ekstern/", "less/modig/felles/",
		"less/enonic/"
	],

	"copyFolders"  : [
		{ "fromDir": "/resources/js/bootstrap/", "toDir": "/generated-resources/js/bootstrap/" },
		{ "fromDir": "/resources/js/jquery/", "toDir": "/generated-resources/js/bootstrap/jquery/" },

		{ "fromDir": "/resources/js/felles/", "toDir": "/generated-resources/js/modig/felles/" },
		{ "fromDir": "/resources/js/jquery/", "toDir": "/generated-resources/js/modig/jquery/" },

		{ "fromDir": "/resources/less/bootstrap/", "toDir": "/generated-resources/less/bootstrap/" },

		{ "fromDir": "/resources/less/felles/", "toDir": "/generated-resources/less/modig/felles/" },
		{ "fromDir": "/resources/less/ekstern/", "toDir": "/generated-resources/less/modig/ekstern/" },

		{ "fromDir": "/resources/css/", "toDir": "/generated-resources/css/modig/" },
		{ "fromDir": "/resources/img/", "toDir": "/generated-resources/img/" }
	],

	"copyFiles"  : [
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/bootstrap/", "file": "console.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/bootstrap/", "file": "html5.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/bootstrap/", "file": "html5.min.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/bootstrap/", "file": "underscore.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/bootstrap/", "file": "underscore-min.js" },

		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/modig/", "file": "console.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/modig/", "file": "html5.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/modig/", "file": "html5.min.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/modig/", "file": "underscore.js" },
		{ "fromDir": "/resources/js/", "toDir": "/generated-resources/js/modig/", "file": "underscore-min.js" }
	],

	"concatFiles": [
		{ "fromDir": "/resources/js/bootstrap/", "toFile": "/generated-resources/js/bootstrap/bootstrap.js",
			"files": "fs.readdirSync(baseFolder + '/resources/js/bootstrap/')" },
		{ "fromDir": "/resources/js/felles/", "toFile": "/generated-resources/js/modig/modig.js",
			"files": ["transitions.js", "felles.js", "dropdown.js", "tooltip.js", "AjaxLoader.js"] },
		
		{ 
			"fromDir": "/resources/less/felles/", "toFile": "/generated-resources/less/modig/felles.less",
			"files": ["reset.less", "variables.less", "mixins.less", "modus.less", "typografi.less", "felles.less",
					  "knapper.less", "contrast.less", "dropdowns.less", "skjema.less", "tooltip.less", "utilities.less"]
		},
		{ "fromDir": "/resources/less/ekstern/", "toFile": "/generated-resources/less/modig/ekstern.less",
			"files": ["panel.less", "footer.less", "ekstern.less"] },
		{ "fromDir": "/generated-resources/less/modig/", "toFile": "/generated-resources/less/modig/modig.less",
			"files": ["felles.less", "ekstern.less"] }
	],

	"uglify": [
		{ "fromFile": "/generated-resources/js/bootstrap/bootstrap.js", "toFile": "/generated-resources/js/bootstrap/bootstrap.min.js" },
		{ "fromFile": "/generated-resources/js/modig/modig.js", "toFile": "/generated-resources/js/modig/modig.min.js" }
	],

	"remove": ["/generated-resources/less/modig/felles.less", "/generated-resources/less/modig/ekstern.less"],

	"runLess": [
		{ "fromDir": "/resources/less/bootstrap/", "mainFile": "/resources/less/bootstrap/bootstrap.less",
			"builtFile": "/generated-resources/css/bootstrap/bootstrap.css" },
		{ "fromDir": "/generated-resources/less/modig/", "mainFile": "/generated-resources/less/modig/modig.less",
			"builtFile": "/generated-resources/css/modig/modig.css" }
	]
}

